.sfytj_index {

  /* 页面body部分*/
  .mainbody {
    @include center_block;
    margin-top: 100px;
    width: 100%;

    a:link {
      text-decoration: none;
    }

    /* 页面中每个菜单 mainbody_child */
    .mainbody_child {
      width: 22.5%;
      height: 460px;
      border-radius: 3%;
      float: left;
      position: relative;
      background: rgba(255, 255, 255, 0.8);
      -moz-box-shadow: 0 0 11px 6px rgba(165, 193, 200, .5);
      -webkit-box-shadow: 0 0 11px 6px rgba(165, 193, 200, .5);
      box-shadow: 0 0 11px 6px rgba(165, 193, 200, .5);
      display: none;
    }

    /*四个菜单*/
    .child2, .child3 {
      margin-left: 5%;
    }

    /*body标题*/
    .mainbody-title {
      @include font(36);
      color: #333333;
      font-family: $font_yahei;
      font-weight: 900;
      width: 100%;
      height: 100px;
      line-height: 100px;
      text-align: center;
    }

    /*body图片*/
    .mainbody-image {
      text-align: center;
      width: 350px;
      height: 96px;
      line-height: 96px;
    }
    img{
      height: 95px;
    }

    /*body内容*/
    .mainbody-content {
      width: 100%;
      height: 100px;

      .content {
        /*width: 232px;*/
        width: 80%;
        height: 110px;
        color: #333333;
        font-family: $font_yahei;
        font-size: 24px;
        font-weight: 500;
        margin-top: 33px;
        overflow: hidden;
        @include center_block;
      }
    }

    /*body底部按钮*/
    .mainbody-button {
      width: 350px;
      height: 131px;
      line-height: 131px;
      text-align: center;
      .btn-bottom {
        width: 200px;
        height: 45px;
        color: #53aee7;
        background-color: #53aee7;

        span {
          @include font(20);
          font-weight: 800;
          color: $whiteColor;
        }
      }

    }

  }
}














































