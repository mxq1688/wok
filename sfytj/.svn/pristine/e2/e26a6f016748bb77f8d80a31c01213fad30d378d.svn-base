/*诉讼咨询*/
.sszx {
  width: 100%;
  height: 100%;
  overflow: hidden;

  .main_body {
    margin: 30px 30px 90px;
    height: 840px;
    background: rgba(255, 255, 255, 0.7);
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.45);
    border-radius: 5px;

    padding: 56px 100px;
    position: relative;
    .title {
      font-weight: 500;
      line-height: 55px;
      border-bottom: 2px solid $blackColor;
    }
    .text {
      color: $blackColor;
      margin-top: 30px;
      text-indent: 50px;
      img {
        float: right;
      }
    }
    .btn_row{
      bottom: 130px;
      .call_btn {
        width: 350px;
        left: 50%;
        margin-left: -175px;
        position: absolute;
      }
    }
  }

}