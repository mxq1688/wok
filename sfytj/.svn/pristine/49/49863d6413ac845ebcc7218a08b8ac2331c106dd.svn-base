<script type="text/javascript">
    /*全局变量*/
    var form_data = get_lasq_form_base_zxaj();

    function init_data() {
        console.log("form_data执行案件的数据:");
        console.log(form_data);

        if(form_data.ajbd){$("#sqrxx_zxaj .zxje").val(form_data.ajbd);}
        if(form_data.lasf){$("#sqrxx_zxaj .lasf").val(form_data.lasf);}
        // if(form_data.cxmm){
        //     $("#sqrxx_zxaj .cxmm").val(form_data.cxmm);
        //     $("#sqrxx_zxaj .zccxmm").val(form_data.cxmm);
        // }
        if(form_data.li_phone){$("#sqrxx_zxaj .lian_phone_num").val(form_data.li_phone);}  
        if(form_data.dzyj){$("#sqrxx_zxaj .dzyj").val(form_data.dzyj);}
        if(form_data.qtfs){$("#sqrxx_zxaj .qtfs").val(form_data.qtfs);}
        if(form_data.zxyj){$("#sqrxx_zxaj .zxyj").val(form_data.zxyj);}
        if(form_data.zxyjwh){$("#sqrxx_zxaj .zxyjwh").val(form_data.zxyjwh);}
        if(form_data.zxyjdw){$("#sqrxx_zxaj .zxyjdw").val(form_data.zxyjdw);}
        if(form_data.ssqq){$("#sqrxx_zxaj .sy").val(form_data.ssqq);}    

    }

    function init_event() {

        //tree change时事件
        $('#treeview1').on("changed.jstree", function (e, data) {
            console.log("The selected nodes are:");
            console.log(data.node.id);               //选择的node id
            console.log(data.node.text);            //选择的node text

            form_data.ay = data.node.text;
            form_data.ay_id = data.node.id;

        });

        //jstree单击事件
        $("#treeview1").bind("select_node.jstree", function (e, data) {

            //单击li展开下面的节点
            if(data.node.id !=1 ){                           //排除第一个节点(2011民事案由)
                data.instance.toggle_node(data.node);
            }

            //搜索后点击，去掉搜索li的背景
            if($(".jstree-search")[0]){
                $(".jstree-search").removeClass("jstree-search");
            }
            
        }); 

        //输入框输入定时自动搜索
        var to = false;
        $('#search_ay').keyup(function () {
            if(to) {
              clearTimeout(to); 
            }

            to = setTimeout(function () {
                $('#treeview1').jstree(true).search($('#search_ay').val());

                if($(".jstree-search")[0]){
                   //如果搜索的内容不在可视区设置scrollTop
                    var height = $(".jstree-search").outerHeight();
                    var eles = $("#treeview1").find("a");
                    var index = 0;
                    for(var i=1; i<=eles.length; i++){
                        if($(eles[i-1]).hasClass("jstree-search")){
                            index = i;
                            console.log(index);
                            break;
                        }
                    }

                    if(index>8){
                        var top = (index-8)*height;
                        $(".reason_list").scrollTop(top);
                    }
 
                }

                if($(".jstree-search")[0] && $(".jstree-clicked")){
                    $(".jstree-clicked").removeClass("jstree-clicked");
                }

            }, 250);
        });

        //判断申请执行金额是否为正数
        function validate(num)
        {
            var reg = /^\d+(?=\.{0,1}\d+$|$)/;
            if(reg.test(num)){
                return true;          //正数
            }else{
                return false ;        //负数
            }
        }

        $("#btn_next").click(function () {
                var sqzxje = $("#sqrxx_zxaj .zxje").val();
                var lasf = $("#sqrxx_zxaj .lasf").val();
                var cxmm = $.trim($("#sqrxx_zxaj .cxmm").val());
                var zccxmm = $.trim($("#sqrxx_zxaj .zccxmm").val());
                var li_phone = $.trim($("#sqrxx_zxaj .lian_phone_num").val());
                var dzyj = $.trim($("#sqrxx_zxaj .dzyj").val());
                var qtfs = $.trim($("#sqrxx_zxaj .qtfs").val());
                var zxyj = $.trim($("#sqrxx_zxaj .zxyj").val());
                var zxyjwh = $.trim($("#sqrxx_zxaj .zxyjwh").val());
                var zxyjdw = $.trim($("#sqrxx_zxaj .zxyjdw").val());
                var ssqq = $.trim($("#sqrxx_zxaj .sy").val());

                $('[data-toggle="tooltip"]').tooltip();

                reg = /^(0|[1-9][0-9]*)$/;

                if(!$('.jstree-clicked')[0]){
                    open_modal("请选择案由！");
                }
                else if(!sqzxje){
                    open_modal("请输入执行标的金额！");
                }else if ((!validate(parseFloat(sqzxje)))|| isNaN(sqzxje)) {
                    open_modal("请输入大于等于0的执行标的金额！");
                }else if (!lasf) {
                    open_modal("请选择立案身份！");
                // }else if(cxmm.split("").length<6){
                //     open_modal("查询密码至少输入6位，请重新输入！");
                // }else if(zccxmm!=cxmm){
                //     open_modal("两次密码输入不一致！");
                }else if(!validatemobile(li_phone)){

                }else if(dzyj!="" && !/^\w+@[a-z0-9]+\.[a-z]+$/i.test(dzyj)){
                    open_modal("请输入有效的电子邮件地址！");
                }else if(!zxyj){
                    open_modal("请输入执行依据！");
                }else if(!zxyjwh){
                    open_modal("请输入执行依据文号！");
                }else if(!zxyjdw){
                    open_modal("请输入执行依据单位！");
                }else if(!ssqq){
                    open_modal("请输入诉讼与事实请求！");
                // }else if((!validatemobile(li_phone))||(!lasf)||(!ssqq)||(!validate(parseFloat(sqzxje)))||(isNaN(sqzxje))||(sqzxje=='0')){
                //     open_modal("请输入完整，并检查输入的申请执行金额为大于0的数字！");
                // }
                }else{
                    var user_id = getCookie('user_id')||1;
                    form_data.user_id = user_id;
                    form_data.ajbd = sqzxje;
                    form_data.lasf = lasf;
                    form_data.cxmm = cxmm;
                    form_data.li_phone = li_phone;
                    form_data.dzyj = dzyj;
                    form_data.qtfs = qtfs;
                    form_data.zxyj = zxyj;
                    form_data.zxyjwh = zxyjwh;
                    form_data.zxyjdw = zxyjdw;
                    form_data.ssqq = ssqq;

                    /*保存案件基本信息*/
                    save_lasq_form_base_zxaj(form_data); 
                    next_step_zxaj(2);
                }
        });
    }

    function init_view() {

        $("#treeview1").jstree({
            'core' : {
                "multiple" : false,
                'data' : zx_ay,
                'dblclick_toggle': false          //禁用tree的双击展开
            },
            "plugins" : ["search"] 

        });

        //案由列表展示已选择的案由
        $("#treeview1").on("ready.jstree", function(){
            if(form_data.ay){
                var ay = form_data.ay;
                $('#treeview1').jstree(true).search(ay);

                //遍历找到的a,将id=form_data.ay_id的a找到,增加背景色
                $(".jstree-search").each(function(){

                    $(".jstree-search").removeClass("jstree-search");
                    if($(this).attr("id") == (form_data.ay_id+"_anchor")){
                        $(this).addClass("jstree-clicked");
                        return false;
                    }   
                });
            }

            //如果a不再可视区，设置scrollTop将其显示
            var a_height = $(".jstree-clicked").outerHeight();
            var eles =  $("#treeview1").find("a");
            var index = 0;                                          //记录第几个a被选中;
            for(var i=1; i<=eles.length; i++){
                if($(eles[i-1]).hasClass("jstree-clicked")){
                    index = i;
                    console.log(index);
                    break;
                }
            }

            if(index>8){
                var top = (index-8)*a_height;
                $(".reason_list").scrollTop(top);
            }

        });

        /* 记录导航条步数的方法 */
        nav_step_zxaj("last_step_zxaj", 6);

        //演示代码，给手机号码赋初值
        //$(".lian_phone_num").val(localStorage.getItem("phonenumber"));
    }
</script>
<!-- 立案身份选择js -->
