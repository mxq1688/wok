/*上屏新闻*/
.news {
  background-image: $body_background;
  background-position: right bottom;
  background-repeat: no-repeat;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  #WebRTCPlugin_updateFrame{
    display: none!important;
  }

  .main_body {
    padding: 100px;
    height: 960px;
    overflow: hidden;
    position: relative;

    /*新闻列表*/
    .news_container {
      //display: none;
      .dg-wrapper {
        width: 650px;
        height: 790px;
        margin: auto;
        position: relative;
        -webkit-transform-style: preserve-3d;
        -moz-transform-style: preserve-3d;
        -o-transform-style: preserve-3d;
        -ms-transform-style: preserve-3d;
        transform-style: preserve-3d;
        -webkit-perspective: 1000px;
        -moz-perspective: 1000px;
        -o-perspective: 1000px;
        -ms-perspective: 1000px;
        perspective: 1000px;
        .dg-transition {
          z-index: 1;
          -webkit-transition: all 0.5s ease-in-out;
          -moz-transition: all 0.5s ease-in-out;
          -o-transition: all 0.5s ease-in-out;
          -ms-transition: all 0.5s ease-in-out;
          transition: all 0.5s ease-in-out;
        }
        .dg-center {
          z-index: 2;
        }
        /*新闻项*/
        .news_item {
          width: 650px;
          position: absolute;
          left: 0;
          top: 0;
          background: white;
          box-shadow: 0 0 15px rgba(0, 0, 0, .45);
          /*新闻头部，主要是新闻封面图片*/
          .news_header {
            width: 100%;
            height: 366px;

            /*新闻封面*/
            .news_pic {
              width: 100%;
              height: 100%;
            }
            /*新闻标签*/
            .news_label {
              position: absolute;
              top: 30px;
              left: 0;
              width: 180px;
              height: 40px;
              @include insert-images('icon/icon_news_label_text');
            }
          }
          /*新闻主体，包括发布时间，标题*/
          .news_body {
            margin: 0 20px;
            padding: 10px 0;
            border-bottom: 1px solid #9a9a9a;
            .news_date {
              color: $blueColor;
              width: 20%;
              float: left;
              .news_date_day {
                float: left;
                font-size: 40px;
                margin-right: 5px;
                line-height: 50px;
              }
              .news_date_month {
              }
              .news_date_year {

              }
            }
            .news_title {
              font-size: 24px !important;
              line-height: 28px;

              color: black;
              float: left;
              word-break: break-all;
              padding: 0 20px;
              width: 80%;
            }

          }
          .news_body:after {
            clear: both;
          }
          /*新闻正文*/
          .news_text {
            color: $blackColor;
            padding: 10px 20px;
            height: 174px;
            overflow: hidden;
          }
          /*新闻底部，包括所在法院名称，新闻发布人*/
          .news_footer {
            background: gray;
            color: white;
            height: 50px;
            line-height: 50px;
            padding: 0 10px;
            .fymc {
              float: left;
              @include insert-images('icon/icon_fymc');
              background-position: left;
              padding: 0 10px 0 40px;
            }
            .news_author {
              float: right;
              @include insert-images('icon/icon_author');
              background-position: left;
              padding: 0 10px 0 40px;
            }
          }
          .news_footer:after {
            clear: both;
          }
        }
        /*类型为视频的新闻*/
        .news_item.video {
          //650 524 500    932 889
          margin-top: 45px;
          width: 800px;
          margin-left: -75px;
          .news_text {
            height: 0;
            display: none;
          }
          .news_body {
            border: none;
          }
          .news_label {
            @include insert-images('icon/icon_news_label_video');
          }
          .news_video {
            width: 100%;
            height: 100%;
          }
          .news_header {
            height: 450px;
          }
        }

      }
    }

    /*视频通话窗口*/
    .video_chat {
      display: none;
      background: rgba(255, 255, 255, 0.7);
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.45);
      border-radius: 5px;
      z-index: 1001;
      padding: 56px 100px;
      height: 760px;
      position: relative;
      .title {
        font-weight: 500;
        line-height: 55px;
        //margin-bottom: 30px;
        border-bottom: 2px solid $blackColor;
      }
      .text {
        color: $blackColor;
        text-indent: 50px;
        //float: right;
        //width: 50%;//720px;
        width: 100%;
        //padding: 30px 0 30px 30px;
        height: auto;
        padding-top: 10px;
      }
      .video_container {
        float: left;
        position: relative;
        width: 55%;//720px;
        height: 540px;
        margin-right: 30px;
        text-indent: 0px;

        //margin: 0 30px 30px 0;
        /* /!*水平居中*!/
         position: absolute;
         left: 50%;
         margin-left: -450px;
         top: 50%;
         margin-top: -338px;

         background: white;
         padding: 5px;*/

        //box-shadow: 0 0 20px rgba(0, 0, 0, 0.45);

        /*对方的视频显示区域*/
        .remote_video {
          width: 100%;
          height: 100%;

          background: gray;
        }
        /*本地的视频显示区域*/
        .local_video {
          width: 220px!important;
          height: 166px!important;

          position: absolute;
          right: 0px;
          bottom: 50px;

          background: gray;
        }
        /*控制按钮显示区域*/
        .control_button_container {
          //display: none;
          width: 416px;
          height: 64px;

          position: absolute;
          left: 10%;
          bottom: 60px;
          display: none;

          /*视频按钮，音频按钮，消息按钮，挂断按钮*/
          .btn_video, .btn_audio, .btn_msg, .btn_hungup {
            width: 64px;
            height: 64px;
            margin: 0 20px;
            float: left;
          }
          .btn_video {
            @include insert-images('icon/icon_btn_video');
          }
          .btn_audio {
            @include insert-images('icon/icon_btn_audio');
          }
          .btn_msg {
            @include insert-images('icon/icon_btn_msg');
          }
          .btn_hungup {
            @include insert-images('icon/icon_btn_hungup');
          }
        }
        .control_button_container:after {
          clear: both;
        }

        .tips {
          display: none;
          color: white;
          padding: 10px;
          background: rgba(0, 0, 0, 0.3);

          width: 395px;
          height: auto;

          position: absolute;
          left: 10%;
          bottom: 140px;
        }
        .video_footer{
          background: rgba(0, 0, 0, 0.3);
          color: white;
          width: 100%;
          height: 50px;
          line-height: 50px;
          padding: 0 10px;
          position: absolute;
          bottom: 0;
          .fymc {
            float: left;
            @include insert-images('icon/icon_fymc');
            background-position: left;
            padding: 0 10px 0 40px;
          }
          .time {
            float: right;
            @include insert-images('icon/icon_time');
            background-position: left;
            padding: 0 10px 0 40px;
          }
        }
      }

    }
  }

